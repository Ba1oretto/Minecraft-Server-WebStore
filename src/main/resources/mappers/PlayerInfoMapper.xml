<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.homeward.webstore.mapper.PlayerInfoMapper">
    <resultMap id="information" type="PlayerInfo" autoMapping="true">
        <id column="a_uuid" property="uuid"/>
        <result column="a_name" property="name"/>
    </resultMap>
    <select id="selectPlayer" resultMap="information" useCache="true">
        SELECT
        a.uuid a_uuid, a.name a_name
        FROM player_info a
        <where>
            <if test="uuid != null and uuid != ''">
                a.uuid = #{uuid}
            </if>
        </where>
    </select>

    <insert id="insertPlayer">
        INSERT INTO
        player_info(uuid, name)
        <if test="uuid != null and uuid !='' and name != null and name != ''">
            VALUES(#{uuid}, #{name})
        </if>
    </insert>
</mapper>